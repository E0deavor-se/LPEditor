<button type="button"
    class="@GetCardClass()"
    @onclick="OnSelected">
    <div class="lp-option-card-icon">@Icon</div>
    <div class="lp-option-card-body">
        <div class="lp-option-card-title">@Title</div>
        <div class="lp-option-card-desc">@Description</div>
    </div>
</button>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public bool IsSelected { get; set; }
    [Parameter] public EventCallback OnSelected { get; set; }

    private string GetCardClass()
    {
        return IsSelected ? "lp-option-card is-selected" : "lp-option-card";
    }
}
